{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file": {
        "class": "logging.FileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "./cli-debug.log"
    }
  },
  "root": {
    "level": "INFO",
    "handlers": [
      "file"
    ]
  },
  "loggers": {
    "dry_pipe.cli_screen": {
      "level": "DEBUG",
      "handlers": ["file"]
    },
    "dry_pipe.cli": {
      "level": "DEBUG",
      "handlers": ["file"]
    }
  }
}